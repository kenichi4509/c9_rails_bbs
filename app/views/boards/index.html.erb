<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto boards__linkBox">
    <!-- <a class="btn btn&#45;outline&#45;dark">新規作成</a> -->
    <%= link_to '新規作成', boards_new_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.title %></td>
      <td><%= board.name %></td>
      <td><%= board.created_at.to_s(:jp_time) %></td>
      <td><%= board.updated_at.to_s(:jp_time) %></td>
    </tr>
    <% end %>
  </tbody>
</table>



